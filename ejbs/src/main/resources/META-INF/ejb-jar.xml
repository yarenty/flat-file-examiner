<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar>
    <enterprise-beans>
        <session>
            <ejb-name>Hello</ejb-name>
            <home>com.yarenty.flatfile.ejb.HelloHome</home>
            <remote>com.yarenty.flatfile.ejb.HelloObject</remote>
            <ejb-class>com.yarenty.flatfile.ejb.HelloBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>Hello</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>